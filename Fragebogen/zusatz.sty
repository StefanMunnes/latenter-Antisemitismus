% Marker
\newcommand\tikzmark[1]{
	\tikz[remember picture,overlay]\coordinate (#1);}

% Linie gestrichelt
\newcommand\gestrichelt[4]{\tikz[remember picture,overlay]
	\draw[dashed] ([xshift=#1cm, yshift=0cm]#3.north) -- ([xshift=#2cm,yshift=0cm]#4.south);}

% Linie durchgezogen
\newcommand\durchgezogen[4]{\tikz[remember picture,overlay]
	\draw[] ([xshift=#1cm, yshift=0cm]#3.north) -- ([xshift=#2cm,yshift=0cm]#4.south);}

